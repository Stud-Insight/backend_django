#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

# Extract host and port from DATABASE_URL if not set explicitly
if [ -n "${DATABASE_URL:-}" ]; then
    # Parse postgres://user:pass@host:port/db
    POSTGRES_HOST="${POSTGRES_HOST:-$(echo "$DATABASE_URL" | sed -E 's|.*@([^:]+):([0-9]+)/.*|\1|')}"
    POSTGRES_PORT="${POSTGRES_PORT:-$(echo "$DATABASE_URL" | sed -E 's|.*@([^:]+):([0-9]+)/.*|\2|')}"
else
    # Fallback to building DATABASE_URL from components
    POSTGRES_USER="${POSTGRES_USER:-postgres}"
    POSTGRES_PASSWORD="${POSTGRES_PASSWORD:-}"
    POSTGRES_HOST="${POSTGRES_HOST:-postgres}"
    POSTGRES_PORT="${POSTGRES_PORT:-5432}"
    POSTGRES_DB="${POSTGRES_DB:-postgres}"
    export DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"
fi

wait-for-it "${POSTGRES_HOST}:${POSTGRES_PORT}" -t 30

>&2 echo 'PostgreSQL is available'

exec "$@"
